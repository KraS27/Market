@model Market.Domain.ViewModels.LoginViewModel


@{
    ViewData["Title"] = "CreateProduct";
    Layout = "_Layout";
}

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="position-absolute top-50 start-50 translate-middle mb-3">
        <h1 class="text-white mb-3 text-center">Логин</h1>
        <div class="input-group mb-3">
            <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Имя" aria-label="Имя">       
        </div>    
        <div class="input-group mb-3">
            <input asp-for="@Model.Password" type="text" class="form-control" placeholder="Пароль" aria-label="Пароль">       
        </div>               
        <button class="btn btn-success mb-5 w-100" type="submit">Войти</button>
    </div>
</form>